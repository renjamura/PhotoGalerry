<p id="notice"><%= notice %></p>
<h1><%= @photo.name %></h1>
<%= image_tag @photo.image_url %>

<h2><%=  'Comments' %></h2>
<div id="comment-section">
  <ol id="comments">
    Average score: <%= @photo.comments.average_score %>
    <%= render @photo.comments.order('created_at DESC') %>
  </ol>
  <% if user_signed_in? %>
    <h3>Add a comment:</h3>
    <%= render 'comments/form' %>
  <% end %>
</div>
 


<% if user_signed_in? && @photo.user == current_user %>
  <%= link_to 'Edit', edit_photo_path(@photo) %> |
<% end %>
<%= link_to 'Back', :back %>
